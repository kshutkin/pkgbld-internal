{
  "version": "1.0.0",
  "license": "MIT",
  "name": "pkgbld-internal",
  "author": {
    "name": "Konstantin Shutkin"
  },
  "type": "module",
  "bin": "./dist/index.js",
  "main": "./dist/index.js",
